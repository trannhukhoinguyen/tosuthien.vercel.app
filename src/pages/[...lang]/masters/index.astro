---
import {
  AllMasters,
  CnMasters,
  AllSectMasters,
  InMasters,
  ViMasters,
  JpMasters,
} from "../../../db/masters/AllMasterDb.tsx";
import { site } from "@/config/config.json";
import '@/styles/table.css';
import Base from "@/layouts/Base.astro";
import { getListPage, getSinglePage } from "@/lib/contentParser.astro";
import {
  getLangFromUrl,
  getTranslations,
  supportedLang
} from "@/lib/utils/languageParser";
import PageHeader from "@/partials/PageHeader.astro";
import type { ContentEntryMap } from "astro:content";
import InteractiveTableWC from "../../../layouts/components/Table/InteractiveTableWC.astro";
import MonocolorPeriodicTable from "../../../layouts/components/Chart/MonocolorPeriodicTable.astro";


export function getStaticPaths() {
  const paths = supportedLang.map((lang) => ({
    params: {
      lang: lang || undefined,
    },
  }));
  return paths;
}
const { lang } = Astro.params || getLangFromUrl(Astro.url);

const postIndex = await getListPage(
  "masters",
  lang as keyof ContentEntryMap
);
const posts = await getSinglePage("masters", lang as keyof ContentEntryMap);
const {

} = await getTranslations(lang as keyof ContentEntryMap);
---

<Base
  title={ site.title + ' - Masters' }
  meta_title={ site.meta_title + ' - Masters' }
  description={ site.meta_description + ' - Masters' }
  image={'/images/square/meta-image-square-1.jpg'}
>
  <PageHeader title={"Zen Master"} />

  <div class="container">
    <InteractiveTableWC mastersDb={AllMasters} lang={lang} />
  </div>
  <div class="container">
    <MonocolorPeriodicTable mastersDb={AllMasters} />
  </div>


</Base>
