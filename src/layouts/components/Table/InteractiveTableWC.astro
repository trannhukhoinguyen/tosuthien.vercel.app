                      ? "japan-tag"
                      : master.country === 'ğŸ‡»ğŸ‡³'
                        ? "vietnam-tag"
                        : "korea-tag" }
                >{ master.country === 'ğŸ‡®ğŸ‡³'? "India" : master.country === 'ğŸ‡¨ğŸ‡³' ? "China" : master.country === 'ğŸ‡¯ğŸ‡µ' ? "Japan" : master.country === 'ğŸ‡»ğŸ‡³' ? "Vietnam" : "Korea" }</span></div>
              </div>
              {
                master.teachers.length === 1
                  ? <span class="grid-desc">ğŸ‘¨â€ğŸ« { master.teachers[0] }</span>
                  : master.teachers.length > 1
                    ? master.teachers.map(teacher => <div class="grid-desc">â€ğŸ« {teacher + ', '}</div>)
                    : ''
              }
              {
                master.disciples.length === 1
                  ? <span class="grid-desc">ğŸ‘¨â€ğŸ“ { master.disciples[0] }</span>
                  : master.disciples.length > 1
                    ? master.disciples.map(disciple => <div class="grid-desc">ğŸ‘¨â€ğŸ“ {disciple + ', '}</div>)
                    : ''
              }
              { master.place !== '-' ? <div class="grid-price">ğŸ”â›© { master.place }</div> : '' }
