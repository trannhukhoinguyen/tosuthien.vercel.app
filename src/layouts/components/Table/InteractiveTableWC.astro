                    : master.sect.length > 1
                      ? master.sect.map(school => <div><span class={ master.sect[0] === 'Linji'
                        ? "linji-tag"
                        : master.sect[0] === 'Caodong'
                          ? "caodong-tag"
                          : master.sect[0] === 'Guiyang'
                            ? "guiyan-tag"
                            : master.sect[0] === 'Yunmen'
                              ? "yunmen-tag"
                              : master.sect[0] === 'Fayan'
